	<!-- Footer -->
	<footer class="footer">
		<div class="container">
			<div class="row wrapper">
				<div class="col-lg-4">
					<p class="text-muted">
						&copy; iNeeed! 2016 - {{ 'now'|date('Y') }}
						<br /> Всички права запазени.
					</p>
				</div>
				<!-- /.col-lg-6 -->

				<div class="col-lg-4 text-center">
					<img src="imgs/iNeed-Midnight.png" alt="logo" height="30" />
				</div>
				<div class="col-lg-4 text-right">
					<a href="#">Въпроси и отговори</a><br /> <a href="#">Подай сигнал за нередност</a>
				</div>
				<!-- /.col-lg-6 -->
			</div>
			<!-- /.row -->
		</div>
	</footer>
	<!-- /.footer -->

	<script src="vendor/jquery/dist/jquery.min.js"></script>	
	<script src="vendor/bootstrap-star-rating/js/star-rating.js" type="text/javascript"></script>
	<script src="vendor/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
	<script src="vendor/bootstrap-select/dist/js/i18n/defaults-bg_BG.js"></script>
	<script src="js/select-style.js"></script>
</body>

</html>
