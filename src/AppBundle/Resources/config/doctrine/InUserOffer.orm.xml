<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\InUserOffer" table="in_user_offer">
    <indexes>
      <index name="FK_in_user_id" columns="user_id"/>
      <index name="FK_in_service_id" columns="service_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="minPrice" type="integer" column="min_price" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="maxPrice" type="integer" column="max_price" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="startDate" type="date" column="start_date" nullable="true"/>
    <field name="enDate" type="date" column="en_date" nullable="true"/>
    <many-to-one field="user" target-entity="InUser" fetch="LAZY">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="service" target-entity="InService" fetch="LAZY">
      <join-columns>
        <join-column name="service_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
